# =================================
# üöÄ PRODUCTION Environment Configuration
# =================================
# This is your production-ready environment configuration
# Copy this to .env.production and update with your real values

# =================================
# Application Settings
# =================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="Crypto Payment Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_BASE_URL="https://safeping.xyz"

# =================================
# Network Configuration
# =================================
NEXT_PUBLIC_NETWORK_MODE="mainnet"

# =================================
# Database Configuration
# =================================
DATABASE_URL="/app/data/payments.db"

# =================================
# Security Settings
# =================================
# IMPORTANT: Generate secure random strings for production!
# Use: openssl rand -base64 32
WEBHOOK_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING_32_CHARS"
JWT_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING_32_CHARS"

# =================================
# Payment Configuration
# =================================
PAYMENT_EXPIRY_MINUTES=30
MAX_PAYMENT_AMOUNT=10000
MIN_PAYMENT_AMOUNT=1

# =================================
# Blockchain Networks - MAINNET
# =================================
# ‚ö†Ô∏è CRITICAL: Deploy contracts first and update these addresses!
BSC_PAYMENT_PROCESSOR_MAINNET="DEPLOY_BSC_CONTRACT_FIRST"
ETHEREUM_PAYMENT_PROCESSOR_MAINNET="DEPLOY_ETHEREUM_CONTRACT_FIRST"
TRON_PAYMENT_PROCESSOR_MAINNET="DEPLOY_TRON_CONTRACT_FIRST"

# Treasury address for receiving payments
TREASURY_ADDRESS="YOUR_PRODUCTION_TREASURY_ADDRESS"

# RPC URLs for blockchain connections
BSC_RPC_URL="https://bsc-dataseed1.binance.org"
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID"
TRON_RPC_URL="https://api.trongrid.io"

# API Keys for block explorers
BSC_API_KEY="YOUR_BSCSCAN_API_KEY"
ETHEREUM_API_KEY="YOUR_ETHERSCAN_API_KEY"

# =================================
# Rate Limiting & Security
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS="https://safeping.xyz,https://www.safeping.xyz"

# =================================
# Optional Services
# =================================
REDIS_URL="redis://localhost:6379"
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING="true"

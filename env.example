# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Crypto Payment Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Network Mode
NEXT_PUBLIC_NETWORK_MODE=testnet

# Database
DATABASE_URL=./data/payments.db

# Payment Limits
PAYMENT_EXPIRY_MINUTES=30
MAX_PAYMENT_AMOUNT=10000
MIN_PAYMENT_AMOUNT=1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Telegram Bot Configuration
TELEGRAM_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=-1002940840996

# Blockchain Contracts (Testnet)
BSC_PAYMENT_PROCESSOR_TESTNET=0x...
ETHEREUM_PAYMENT_PROCESSOR_TESTNET=0x...
TRON_PAYMENT_PROCESSOR_TESTNET=0x...

# Blockchain Contracts (Mainnet) - Only required if using mainnet
BSC_PAYMENT_PROCESSOR_MAINNET=0x...
ETHEREUM_PAYMENT_PROCESSOR_MAINNET=0x...
TRON_PAYMENT_PROCESSOR_MAINNET=0x...

# Treasury Address
TREASURY_ADDRESS=0x...

# RPC URLs
BSC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your_project_id
TRON_RPC_URL=https://api.shasta.trongrid.io

# API Keys (for contract deployment scripts)
BSC_API_KEY=your_bscscan_api_key
ETHEREUM_API_KEY=your_etherscan_api_key

# Contract Deployment (for scripts only)
PRIVATE_KEY=your_private_key_here

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=false

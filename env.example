# =================================
# ðŸ”§ Environment Configuration Template
# =================================
# Copy this file to .env.local for development or .env.production for production
# NEVER commit actual environment files with secrets to version control

# =================================
# Application Settings
# =================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="Crypto Payment Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_BASE_URL="https://safeping.xyz"

# =================================
# Network Configuration
# =================================
# Set to "mainnet" for production, "testnet" for development
NEXT_PUBLIC_NETWORK_MODE="mainnet"

# =================================
# Database Configuration
# =================================
DATABASE_URL="/app/data/payments.db"

# =================================
# Security Settings
# =================================
# Generate secure random strings for production
WEBHOOK_SECRET="your-secure-webhook-secret-here"
JWT_SECRET="your-secure-jwt-secret-here"

# =================================
# Payment Configuration
# =================================
PAYMENT_EXPIRY_MINUTES=30
MAX_PAYMENT_AMOUNT=10000
MIN_PAYMENT_AMOUNT=1

# =================================
# Blockchain Networks - MAINNET
# =================================
# IMPORTANT: Update these with your deployed contract addresses
BSC_PAYMENT_PROCESSOR_MAINNET="0x..."
ETHEREUM_PAYMENT_PROCESSOR_MAINNET="0x..."
TRON_PAYMENT_PROCESSOR_MAINNET="TXyz..."

# Treasury address for receiving payments
TREASURY_ADDRESS="your-production-treasury-address"

# RPC URLs for blockchain connections
BSC_RPC_URL="https://bsc-dataseed1.binance.org"
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/your-infura-key"
TRON_RPC_URL="https://api.trongrid.io"

# API Keys for block explorers (optional)
BSC_API_KEY="your-bscscan-api-key"
ETHEREUM_API_KEY="your-etherscan-api-key"

# =================================
# Blockchain Networks - TESTNET (for development)
# =================================
# These are already configured in the code with working testnet contracts
BSC_PAYMENT_PROCESSOR_TESTNET="0x91c8246Ee7CE5AC40130f19236860066C7B41f75"
ETHEREUM_PAYMENT_PROCESSOR_TESTNET="your-ethereum-testnet-contract"
TRON_PAYMENT_PROCESSOR_TESTNET="TWTTXmwy5gRWcuGH8e7r64AQ5F8eRcLqR6"

# Testnet RPC URLs
BSC_TESTNET_RPC_URL="https://data-seed-prebsc-1-s1.binance.org:8545"
ETHEREUM_TESTNET_RPC_URL="https://sepolia.infura.io/v3/your-infura-key"
TRON_TESTNET_RPC_URL="https://api.shasta.trongrid.io"

# =================================
# Rate Limiting & Security
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS="https://safeping.xyz,https://www.safeping.xyz"

# =================================
# Optional Services
# =================================
# Redis for caching (if needed)
REDIS_URL="redis://localhost:6379"

# Monitoring and logging
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING=true
